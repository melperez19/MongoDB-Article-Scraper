<!--Saved Articles Page-->

<!-- Jumbotron -->
<div class="jumbotron-fluid text-center ">
    <div class="jumbotron text-center shadow-lg p-3 mb-5 bg-white rounded">
        <h1><em>Saved Articles</em></h1>
    </div>
</div>
<div class="col-md-12">
    {{#if article}}
    {{#each article}}
    <div class="container">
        <div class="col-md-12">
            <div class="card-header" id="titleinput">
               <a href={{this.link}} target="_blank">{{this.title}}</a>
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0" id="bodyinput">
                    <h5>{{this.author}}</h5>
                    <hr>
                    <p> {{this.summary}}</p>
                    <br><br>
                    <button type="button" class="btn btn-success addNote" data-toggle="modal"
                        data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                    <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
            </div>
        </div>
    </div>
    <br>
    {{/each}}
    {{else}}
    <div class="card shadow mb-5 bg-black rounded">
        <div class="card-header" id="titleinput">
            <blockquote class="blockquote mb-0">
                <h4 class="text-center">You have no saved articles yet.</h4>
            </blockquote>
        </div>
    </div>
</div>
</div>
{{/if}}
</div>
</div>
<footer class="text-center">Article Rights Reserved to GreenMedInfo.com</footer>
<!--Clicked Notes Modal-->
{{#each article}}
{{> notes-modal }}
{{/each}}